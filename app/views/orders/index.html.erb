<div class="columns is-centered mt-6">
  <table class="table table-striped">
    <thead>
    <th>Id zamówienia</th>
    <th>Data zamówienia</th>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <% if order.user_id == current_user.id %>
      <tr>
        <td><%=order.id%>
        <td><%=order.created_at %></td>
      </tr>
    <% end %>
    <% end %>
    </tbody>
  </table>
</div>

